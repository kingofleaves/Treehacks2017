<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zengcs.treehacks2017.StartScreenActivity"

    android:orientation="vertical"
    android:gravity="center"
    android:background="#193333"
    >

    <ImageView
        android:src="@drawable/uchat"
        android:layout_margin="30sp"
        android:layout_width="80sp"
        android:layout_height="80sp" />

    <TextView
        android:text="YOU CHAT MESSENGER"
        android:textColor="#dde8dd"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Name: "
            android:textColor="#dde8dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ET_name"
            android:text="Hans"
            android:textColor="@color/betterWhite"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Gender Preference: "
            android:textColor="#dde8dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/S_gender"
            android:prompt="@string/gender_prompt"
            android:entries="@array/genders"
            android:layout_width="120sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Sexual Preference: "
            android:textColor="#dde8dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/S_sexualorientation"
            android:prompt= "@string/sexualorientation_prompt"
            android:entries="@array/sexualorientations"
            android:layout_width="120sp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:onClick="startChatClicked"
        android:text="Start Chatting"
        android:layout_margin="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
